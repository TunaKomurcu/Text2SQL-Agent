# Veritabanı Ayarları
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=defaultdb
DB_SCHEMA=defaultschema

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_USE_GRPC=false

# Qdrant Koleksiyon İsimleri
QDRANT_SCHEMA_COLLECTION=schema_embeddings
QDRANT_KEYWORDS_COLLECTION=schema_keywords
QDRANT_DATA_SAMPLES_COLLECTION=data_samples
QDRANT_LEXICAL_COLLECTION=lexical_embeddings

# Model Ayarları
EMBEDDING_MODEL_NAME=emrecan/bert-base-turkish-cased-mean-nli-stsb-tr
SEMANTIC_MODEL_NAME=
LEXICAL_FASTTEXT_PATH=./models/fasttext_lexical_model.model
TFIDF_VECTORIZER_PATH=./models/tfidf_vectorizer.joblib

# LLM Ayarları
LLM_MODEL_PATH=./models/OpenR1-Qwen-7B-Turkish-Q4_K_M.gguf
LLM_N_CTX=8192
LLM_N_THREADS=8
LLM_N_BATCH=512
LLM_LOW_VRAM=false
LLM_VERBOSE=false

# GPU Ayarları
# USE_GPU: Otomatik tespit için boş bırakın veya true/false olarak ayarlayın
# None/boş = otomatik tespit (GPU varsa kullan, yoksa CPU)
# true = GPU'yu zorla (GPU yoksa hata verir)
# false = CPU'yu zorla (GPU olsa bile kullanma)
USE_GPU=

# LLM_N_GPU_LAYERS: LLM için GPU'da çalışacak katman sayısı
# -1 = tüm katmanları GPU'ya yükle (önerilen)
# 0 = sadece CPU kullan
# >0 = belirtilen sayıda katmanı GPU'ya yükle
LLM_N_GPU_LAYERS=-1

# Uygulama Ayarları
MAX_PATH_HOPS=2
MAX_INITIAL_RESULTS=15

# Vector & Embedding Ayarları
SEMANTIC_VECTOR_SIZE=768
LEXICAL_VECTOR_SIZE=1000
BATCH_SIZE=128

# Arama Eşikleri
SEMANTIC_THRESHOLD=0.5
LEXICAL_THRESHOLD=0.4
KEYWORD_THRESHOLD=0.4
DATA_VALUES_THRESHOLD=0.5

# Test ve Geliştirme
SKIP_LLM=false
